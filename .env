POSTGRES_SERVER_URL="localhost"
POSTGRES_SERVER_PORT = 5432
POSTGRES_DB_NAME="blog"
POSTGRES_USERNAME="johndoe"
POSTGRES_PASSWORD="randompassword"
DATABASE_URL = "postgres://${POSTGRES_USERNAME}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER_URL}:${POSTGRES_SERVER_PORT}/${POSTGRES_DB_NAME}?schema=public"

REDIS_SERVER_URL="localhost"
REDIS_SERVER_PORT=6379
REDIS_PASSWORD="randompassword"
REDIS_URL = redis://:${REDIS_PASSWORD}@${REDIS_SERVER_URL}:${REDIS_SERVER_PORT}/0