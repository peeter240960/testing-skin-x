generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/client-primary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id       String @id @default(uuid()) @db.Uuid
  username String @unique
  password String

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  createdBy String
  updatedBy String?

  @@map("account")
}

model Post {
  id       String @id @default(uuid()) @db.Uuid
  title    String
  content  String @db.Text
  postedAt DateTime @default(now())
  postedBy String

  updatedAt DateTime? @updatedAt
  updatedBy String?
  PostTag   PostTag[]

  @@map("post")
}

model Tag {
  name    String @id

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  createdBy String
  updatedBy String?
  PostTag   PostTag[]

  @@map("tag")
}

model PostTag {
  id     String @id @default(uuid()) @db.Uuid
  postId String @db.Uuid
  tagId  String

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  createdBy String
  updatedBy String?
  Tag       Tag       @relation(fields: [tagId], references: [name])
  Post      Post      @relation(fields: [postId], references: [id])

  @@map("post_tag")
}
