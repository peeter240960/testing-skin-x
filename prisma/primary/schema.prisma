generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/client-primary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id       String   @id @default(uuid()) @db.Uuid
  title    String
  content  String
  postedAt String
  postedBy String
  tags     String[]

  @@map("post")
}
